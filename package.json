{
  "name": "ecofashion-backend",
  "version": "1.0.0",
  "description": "Backend completo para o sistema EcoFashion - BrechÃ³ Online",
  "main": "api/server.js",
  "type": "module",
  "scripts": {
    "start": "node api/server.js",
    "dev": "nodemon --exec node api/server.js",
    "dev:backend": "nodemon api/server.js",
    "dev:frontend": "python -m http.server 8000",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint api/ --ext .js",
    "lint:fix": "eslint api/ --ext .js --fix",
    "format": "prettier --write api/**/*.js",
    "check": "npm run lint && npm run test",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "db:init": "node api/scripts/initDatabase.js",
    "db:seed": "node api/scripts/seedDatabase.js",
    "db:reset": "node api/scripts/resetDatabase.js",
    "db:backup": "node api/scripts/backupDatabase.js",
    "logs:clear": "rimraf logs/*.log",
    "uploads:clean": "node api/scripts/cleanUploads.js",
    "admin:create": "node api/scripts/createAdmin.js",
    "migrate": "node api/scripts/migrate.js",
    "postinstall": "npm run db:init"
  },
  "keywords": [
    "ecommerce",
    "fashion",
    "sustainable",
    "backend",
    "api",
    "nodejs",
    "express",
    "sqlite"
  ],
  "author": "EcoFashion Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "qrcode": "^1.5.3",
    "sanitize-html": "^2.11.0",
    "sharp": "^0.32.6",
    "speakeasy": "^2.0.0",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^6.4.14",
    "@types/qrcode": "^1.5.5",
    "@types/sanitize-html": "^2.9.5",
    "@types/speakeasy": "^2.0.10",
    "@types/validator": "^13.11.7",
    "@vercel/node": "^5.3.13",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ecofashion/backend.git"
  },
  "bugs": {
    "url": "https://github.com/ecofashion/backend/issues"
  },
  "homepage": "https://github.com/ecofashion/backend#readme",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "api/**/*.js",
      "!api/server.js",
      "!api/scripts/**",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "api/"
    ],
    "ext": "js,json",
    "ignore": [
      "api/tests/",
      "node_modules/",
      "uploads/",
      "logs/"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "exec": "node api/server.js"
  }
}
