# Server Configuration
PORT=3001
NODE_ENV=production
VERCEL=1

# Database Configuration
DB_PATH=/tmp/database.sqlite

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-here
JWT_REFRESH_EXPIRES_IN=7d

# Password Hashing
BCRYPT_ROUNDS=12

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
ALLOWED_IMAGE_TYPES=jpeg,jpg,png,gif,webp

# CORS Configuration
CORS_ORIGIN=https://your-domain.vercel.app,http://localhost:3000,http://localhost:8000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (for password reset, etc.)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=EcoFashion <noreply@ecofashion.com>

# Admin User (created on first run)
ADMIN_EMAIL=admin@ecofashion.com
ADMIN_PASSWORD=admin123
ADMIN_NAME=Administrador

# Security
SESSION_SECRET=your-session-secret-key-here
ENCRYPTION_KEY=your-32-character-encryption-key

# API Configuration
API_BASE_URL=https://your-domain.vercel.app/api
FRONTEND_URL=https://your-domain.vercel.app

# Logging
LOG_LEVEL=info
LOG_FILE=/tmp/app.log

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# Payment Configuration (if implementing payment gateway)
PAYMENT_GATEWAY=stripe
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Social Media Integration (optional)
FACEBOOK_APP_ID=your_facebook_app_id
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Analytics (optional)
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Backup Configuration
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/tmp/backups

# Development Tools
DEBUG=true
VERBOSE_LOGGING=true
ENABLE_SWAGGER=true